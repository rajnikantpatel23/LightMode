<?xml version="1.0" encoding="UTF-8"?> 
<sh:Shadows xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
            xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="ColorController.Controls.AnimationTileShadowControl"
            CornerRadius="10">
    <sh:Shadows.Shades>
        <sh:ImmutableShades>
            <sh:Shade BlurRadius="10"
                                      Opacity="0.5"
                                       Offset="0,0"
                                      Color="{DynamicResource BluetoothOnColor}"/>
            <sh:Shade BlurRadius="10"
                                      Opacity="0.5"
                                      Offset="0,0"
                                      Color="{DynamicResource BluetoothOnColor}" />
        </sh:ImmutableShades>
    </sh:Shadows.Shades>
    <Label/>
</sh:Shadows>